<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context="com.alejo_zr.exceldb.Segmento.Flexible.EditarSegmentoActivity">

    <TextView
        android:id="@+id/tvTipoPav_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipoPav"
        android:textSize="@dimen/subTitulo"
        android:textStyle="bold"
        />
    <Spinner
        android:id="@+id/spinnerTipoPavEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/tvTipoPav_Editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo pavimento" />

    <TextView
        android:id="@+id/tvNumero_Editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/numero"
        android:textSize="@dimen/subTitulo"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/campoNCalzadas_Editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nCalzadas"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/campoNCarriles_Editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nCarriles"/>
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tvAncho_Editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ancho"
        android:textSize="@dimen/subTitulo"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/campoAnchoCarril_Editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/anchoCarril"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/campoAnchoBerma_Editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/anchoBerma"/>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/puntoReferencia"
        android:textSize="@dimen/subTitulo"
        android:textStyle="bold"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/campoPRI_Editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pri"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/campoPRF_Editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prf"/>
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <EditText
            android:id="@+id/campoComentarios_Editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/comentarios"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTopBtn">

        <Button
            android:id="@+id/btnEditarSegmentoActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/editar"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btnEliminarSegmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/eliminar"
            android:onClick="onClick"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_id_segmento_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvId_Carretera_Segmento_Editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/id"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvNombre_Carretera_Segmento_Editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/nombre"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tvPavInt_Editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/tipoPav"
        android:visibility="invisible"/>



</LinearLayout>
