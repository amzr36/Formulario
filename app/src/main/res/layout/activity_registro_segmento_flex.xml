<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context="com.alejo_zr.exceldb.Segmento.Flexible.RegistroSegmentoFlexActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llRegistroSegmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTipoPav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pavFlex"
                android:textSize="@dimen/titulo"
                android:textStyle="bold"

                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/numero"
                android:textSize="@dimen/subTitulo"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/marginTop"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_camponCalzadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/campoNCalzadas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nCalzadas"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_campoNCarriles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/campoNCarriles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nCarriles"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvAncho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ancho"
                android:textSize="@dimen/subTitulo"
                android:textStyle="bold"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_campoAnchoCarril"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/campoAnchoCarril"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/anchoCarril"/>
                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_campoAnchoBerma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/campoAnchoBerma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/anchoBerma"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/puntoReferencia"
                android:textSize="@dimen/subTitulo"
                android:textStyle="bold"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_campoPRI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/campoPRI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pri"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_campoPRF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/campoPRF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prf"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_campoComentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/campoComentarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/comentarios"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnRegistroSegmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/regisSeg"
            android:layout_below="@+id/llRegistroSegmento"
            android:onClick="onClick"/>



        <TextView
            android:id="@+id/tvId_Carretera_Segmento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/id"
            android:layout_below="@id/btnRegistroSegmento"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvNombre_Carretera_Segmento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/nombre"
            android:layout_below="@+id/tvId_Carretera_Segmento"
            android:visibility="visible"/>

    </LinearLayout>




</ScrollView>
